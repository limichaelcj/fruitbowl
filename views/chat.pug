extends layout

block content
  h1 Fruitbowl
  if user
    .user-dock
      span Logged in as: 
      span= user.username
  .chatroom
    .chatroom__header Chatroom
    .chatroom__info
      span#user-count 0
      span= " user(s) online"
    ul.chatroom__feed
    form.chatroom__form#chatroom-form(action='/chat/send' method='post')
      input.chatroom__form__input
      .chatroom__form__submit
        i.fas.fa-paper-plane.button--effect(onclick="document.getElementById('form-submit').click()")
      input#form-submit(type='submit' hidden)
  script(type="text/javascript" src="socket.js")
