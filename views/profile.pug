extends layout

block content
  h1.profile-header #{user.username}'s Profile
  .user-stats
    h2 Statistics
    .user-stats__entry
      b Messages submitted: 
      span= user.total_messages
    .user-stats__entry
      b Last login: 
      span= user.last_login.toDateString()
  .links
    a.button(href='/chat') Go to chatroom 
